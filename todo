# handle debugging
if [[ "${TRACE-0}" == "1" ]]; then
    set -o xtrace
fi

# main logic
case $# in
    1)
        case $1 in
            pop)
                echo "pop"
                ;;
            help|*)
                show_help
                exit 1
                ;;
        esac
        ;;
    2)
        case $1 in
            push)
                echo "push"
                ;;
            *)
                show_help
                exit 1
                ;;
        esac
        ;;
    0|*)
        show_help
        exit 1
        ;;
esac
